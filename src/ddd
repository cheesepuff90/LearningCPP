#include <iostream>
#include <iomanip>

using namespace std;

class Board
{
	public:
		Board(int height, int width);
		int getWidth();
		int getHeight();
		
		void setSize(int height, int width);

	private:
		int mHeight;
		int mWidth;
};

Board::Board(int height, int width) : mHeight(height), mWidth(width)
{
	// Constructor with two parameters.
}

int Board::getHeight()
{
	return mHeight;
}

int Board::getWidth()
{
	return mWidth;
}

void Board::setSize(int height, int width)
{
	mHeight = height;
	mWidth = width;
}

ostream& operator<<(ostream& ostr, Board& num)
{
	for(int i = 0; i < num.getHeight(); i++) {
		for(int j = 0; j < num.getWidth(); j++)
			ostr << setw(2) << "*";
		
		ostr << endl;
	}
	return ostr;
}

Board operator+(Board& lhs, Board& rhs)
{
	Board result(lhs.getHeight() + rhs.getHeight(), lhs.getWidth() + rhs.getWidth());
	return result;
}

int main()
{
	Board cell(10, 10), addend(20, 30);
	Board res = cell + addend;
	int random = rand();
	
	cout << "HEIGHT: " << cell.getHeight() << ", WIDTH: " << cell.getWidth() << endl; // HEIGHT: 20 WIDTH: 30
	// cout << cell << endl;
	// cout << res << endl;
	
	int bound = 3;
	
	for(int i = 0; i < 10; i++)
		cout << rand() % bound << " ";
	
	return 0;
}